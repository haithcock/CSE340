
<main>
    <h1><%= title %></h1>
    <%- messages('partials/flash-messages') %>

    <% if (errors && errors.length > 0) { %>
      <ul class="notice">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
    <form action="/inv/addClass" method="post">
        <p>DIRECTION: The new classification name cannot contain a space or special character of any kind!</p>
      <label for="classification_name">Classification Name</label>
      <input type="text" id="classification_name" name="classification_name" required 
        value="<%= typeof classification_name != 'undefined' ? classification_name : '' %>">

  
      <button type="submit">Add Classification</button>
    </form>
  </main>
  